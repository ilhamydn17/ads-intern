generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  subdistrict_id Int?
  username  String?
  address String?
  phone_number String?
  email String  @unique 
  password String 
  refresh_token String? @db.Text
  otp_code String?
  longitude Float?
  latitude Float?
  registration_date DateTime?
  createdAt DateTime? @default(now()) 
  updatedAt DateTime? @updatedAt 
}

model Image{
  id    Int   @id @default(autoincrement())
  file_name String?
}
